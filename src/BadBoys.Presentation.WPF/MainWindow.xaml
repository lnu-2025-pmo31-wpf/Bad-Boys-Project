<Window x:Class="BadBoys.Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BadBoys.Presentation.WPF.ViewModels"
        Title="Bad Boys Media Manager" Height="650" Width="1000">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Вийти" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="Керування">
                <MenuItem Header="Медіа" Command="{Binding ShowMediaCommand}"/>
                <MenuItem Header="Теги" Command="{Binding ShowTagsCommand}"/>
                <MenuItem Header="Логи" Command="{Binding ShowLogsCommand}"/>
            </MenuItem>

            <MenuItem Header="Користувач">
                <MenuItem Header="Профіль" Click="OpenProfile_Click"/>
                <MenuItem Header="Вийти з акаунту" Click="Logout_Click"/>
            </MenuItem>
        </Menu>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
