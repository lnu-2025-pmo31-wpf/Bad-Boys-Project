<Window x:Class="BadBoys.Presentation.WPF.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Create New Account" 
                   FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Username -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Username:"/>
            <TextBox x:Name="txtUsername" Height="25"/>
        </StackPanel>
        
        <!-- Password -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <Label Content="Password:"/>
            <PasswordBox x:Name="txtPassword" Height="25"/>
        </StackPanel>
        
        <!-- Confirm Password -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <Label Content="Confirm Password:"/>
            <PasswordBox x:Name="txtConfirmPassword" Height="25"/>
        </StackPanel>
        
        <!-- Error Message -->
        <TextBlock Grid.Row="5" x:Name="MessageText" Foreground="Red" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnRegister" Content="Register" Width="80" Margin="5" Click="RegisterButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
