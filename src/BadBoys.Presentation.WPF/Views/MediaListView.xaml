<UserControl x:Class="BadBoys.Presentation.WPF.Views.MediaListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">

        <DataGrid ItemsSource="{Binding MediaItems}"
                  SelectedItem="{Binding SelectedMedia}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Редагувати" Command="{Binding EditMediaCommand}" />
                    <MenuItem Header="Видалити" Command="{Binding DeleteMediaCommand}" />
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Назва" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Категорія" Binding="{Binding Category}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
